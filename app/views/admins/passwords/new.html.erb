
<p class="p-t-35">Enter email address to reset password</p>
<!-- START Password Form -->

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <!-- START Form Control-->
  <div class="form-group form-group-default">
    <%= f.label :email %>
    <div class="controls">
      <%= f.email_field :email, autofocus: true, placeholder: "e.g. mary@domain.com", class: "form-control", required: true %>
    </div>
  </div>
  <!-- END Form Control-->

  <div class="actions">
    <%= f.submit "Send Reset Instructions", class: "btn btn-complete btn-cons m-t-10" %>
  </div>
<% end %>

<!-- END Pasword Form -->
<%= render "admins/shared/links" %>
