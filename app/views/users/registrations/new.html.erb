<p class="p-t-35">Create a new D&B Tools Organization</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }) do |f| %>

  <!-- START Form Control-->
  <div class="form-group form-group-default">
    <%= f.label :email %>
    <div class="controls">
      <%= f.email_field :email, autofocus: true, placeholder: "e.g. mary@domain.com", class: "form-control", required: true %>
    </div>
  </div>
  <%= flash_form_error_for :alert, :email %>
  <!-- END Form Control-->

  <!-- START Form Control-->
  <div class="form-group form-group-default input-group">
    <%= f.label :subdomain %>

      <%= f.text_field :subdomain, placeholder: "e.g. acme", class: "form-control", required: true %>
      <span class="input-group-addon">.D&B Tools.io</span>
  </div>
  <%= flash_form_error_for :alert, :subdomain %>
  <!-- END Form Control-->

  <!-- START Form Control-->
  <div class="form-group form-group-default">
    <%= f.label :password %>
    <div class="controls">
      <%= f.password_field :password, class: "form-control", required: true, autocomplete: "off" %>
    </div>
  </div>
  <%= flash_form_error_for :alert, :password %>
  <!-- START Form Control-->

  <!-- START Form Control-->
  <div class="form-group form-group-default">
    <%= f.label 'Re-enter Password' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
    </div>
  </div>
  <%= flash_form_error_for :alert, :password_confirmation %>
  <!-- START Form Control-->

  <div class="actions">
    <%= link_to "Back", :back,  class: "btn btn-default btn-cons m-t-10" %>
    <%= f.submit "Sign-up for account", class: "btn btn-primary btn-cons m-t-10" %>
  </div>
<% end %>

<p class="p-t-20">Note that if you are already a user in the system your existing credentials will be used.</p>

<%= render "users/shared/links" unless request.subdomains.first == 'app' %>
