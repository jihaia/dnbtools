
<p class="p-t-35">Resend confirmation instructions</p>


<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>


  <!-- START Form Control-->
  <div class="form-group form-group-default">
    <%= f.label :email %>
    <div class="controls">
      <%= f.email_field :email, autofocus: true, placeholder: "e.g. mary@domain.com", class: "form-control", required: true %>
    </div>
  </div>
  <!-- END Form Control-->

  <div class="actions">
    <%= f.submit "Resend Confirmation Instructions", class: "btn btn-primary btn-cons m-t-10" %>

  </div>
<% end %>

<%= render "users/shared/links" %>
